{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-environment/*": ["apps/ng/src/environments/*"],
      "@sdj/backend/slack": ["libs/backend/slack/src/index.ts"],
      "@sdj/backend/api": ["libs/backend/api/src/index.ts"],
      "@sdj/backend/websocket": ["libs/backend/websocket/src/index.ts"],
      "@sdj/backend/core": ["libs/backend/core/src/index.ts"],
      "@sdj/backend/db": ["libs/backend/db/src/index.ts"],
      "@sdj/backend/shared/config": ["libs/backend/shared/config/src/index.ts"],
      "@sdj/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@sdj/backend/shared/domain": ["libs/backend/shared/domain/src/index.ts"],
      "@sdj/backend/ices": ["libs/backend/ices/src/index.ts"],
      "@sdj/backend/storage": ["libs/backend/storage/src/index.ts"],
      "@sdj/backend/cqrs": ["libs/backend/cqrs/src/index.ts"],
      "@sdj/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@sdj/ng/shell": ["libs/ng/shell/src/index.ts"],
      "@sdj/ng/radio/feature": ["libs/ng/radio/feature/src/index.ts"],
      "@sdj/ng/most-played/feature": [
        "libs/ng/most-played/feature/src/index.ts"
      ],
      "@sdj/ng/top-rated/feature": ["libs/ng/top-rated/feature/src/index.ts"],
      "@sdj/ng/shared/ui/players": ["libs/ng/shared/ui/players/src/index.ts"],
      "@sdj/ng/shared/ui/common": ["libs/ng/shared/ui/common/src/index.ts"],
      "@sdj/ng/shared/domain": ["libs/ng/shared/domain/src/index.ts"],
      "@sdj/ng/shared/app/core": ["libs/ng/shared/app/core/src/index.ts"],
      "@sdj/backend/shared/logger": [
        "libs/backend/shared/logger/src/index.ts"
      ],
      "@sdj/ng/shared/ui/sdj-loader": [
        "libs/ng/shared/ui/sdj-loader/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
