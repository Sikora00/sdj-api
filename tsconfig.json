{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-environment/*": ["apps/ng/src/environments/*"],
      "@sdj/backend/slack": ["libs/backend/slack/src/index.ts"],
      "@sdj/backend/api": ["libs/backend/api/src/index.ts"],
      "@sdj/backend/websocket": ["libs/backend/websocket/src/index.ts"],
      "@sdj/backend/core": ["libs/backend/core/src/index.ts"],
      "@sdj/backend/db": ["libs/backend/db/src/index.ts"],
      "@sdj/backend/common": ["libs/backend/common/src/index.ts"],
      "@sdj/backend/config": ["libs/backend/config/src/index.ts"],
      "@sdj/shared/common": ["libs/shared/common/src/index.ts"],
      "@sdj/backend/shared": ["libs/backend/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
